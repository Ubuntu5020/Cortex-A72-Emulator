#cloud-config
# Reference: https://www.zetta.io/en/help/articles-tutorials/cloud-init-reference/
# Examples:  https://cloudinit.readthedocs.io/en/latest/topics/examples.html

# password of the default user
password: passw0rd

# this password will not be expired
chpasswd: { expire: False }

# enables password-based SSH logins
ssh_pwauth: True

# /etc/hosts will be rewritten from /etc/cloud/templates/hosts.tmpl on every boot
manage_etc_hosts: true

sudo: ALL=(ALL) NOPASSWD:ALL
hostname: ubuntu
